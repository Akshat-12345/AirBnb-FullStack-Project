<%= layout("/layouts/boiler_plate.ejs") %>

<style>
  body, html {
    height: 100%;
    margin: 0;
  }

  /* Main background styling */
  body {
    background: url('/images/pic4.jpg') no-repeat center center;
    background-size: cover;
    
    /* --- THIS IS THE ONLY CHANGE YOU NEED --- */
    /* 'fixed' locks the background to the screen, removing any gaps. */
    background-attachment: fixed; 
    
    min-height: 100vh;
  }

  /* Center the card on the page */
  .signup-container {
    min-height: 100vh; 
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
  }

  /* Card custom look */
  .card {
    border-radius: 15px;
    box-shadow: 0px 4px 20px rgba(0,0,0,0.3);
    width: 100%;
    max-width: 400px;
    border: none;
  }

  /* Pink Airbnb heading */
  .airbnb-heading {
    color: #FF385C; 
    font-weight: 700;
  }

  /* Responsiveness for Tablets and up */
  @media (min-width: 768px) {
    .card {
      width: 400px; 
    }
  }
</style>


<div class="signup-container">
  <div class="card p-4">
    <h2 class="text-center airbnb-heading mb-4">Sign-In</h2>
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" class="form-control" name="email" id="email" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" id="password" required>
      </div>
      <button class="btn w-100 text-white" style="background-color:#FF385C;">Sign In</button>
    </form>
    <p class="text-center mt-3">
      Didn't have an account? <a href="/signup" style="color:#FF385C; text-decoration:none;">Signup here</a>
    </p>
  </div>
</div>